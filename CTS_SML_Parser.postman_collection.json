	"item": [
		{
			"name": "API Decode - Gültiger SML Dump (String)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response is JSON\", function () {",
							"    pm.response.to.be.json;",
							"});",
							"",
							"pm.test(\"Response contains messages array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('messages');",
							"    pm.expect(jsonData.messages).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Response contains tasmota_meter_def\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('tasmota_meter_def');",
							"    pm.expect(jsonData.tasmota_meter_def).to.be.a('string');",
							"});",
							"",
							"pm.test(\"Response contains parse_errors array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('parse_errors');",
							"    pm.expect(jsonData.parse_errors).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Response contains obis_errors array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('obis_errors');",
							"    pm.expect(jsonData.obis_errors).to.be.an('array');",
							"});",
							"",
							"pm.test(\"Messages have required fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.messages.length > 0) {",
							"        var msg = jsonData.messages[0];",
							"        pm.expect(msg).to.have.property('obis');",
							"        pm.expect(msg).to.have.property('obis_code');",
							"        pm.expect(msg).to.have.property('obis_short');",
							"        pm.expect(msg).to.have.property('name');",
							"        pm.expect(msg).to.have.property('unit');",
							"        pm.expect(msg).to.have.property('topic');",
							"        pm.expect(msg).to.have.property('value');",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
